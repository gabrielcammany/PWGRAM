<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
    {% endblock %}

    <title>{% block title %}{%  endblock %} - PwGram</title>

    {% block styles %}
        <link href="{{ asset('/login-register.css','css') }}" rel="stylesheet" />
        <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">

        <!-- Custom CSS -->
        <link href="{{ asset('/3-col-portfolio.css','css') }}" rel="stylesheet" />
        <link href="{{ asset('/base.css','css') }}" rel="stylesheet" />
        <link href="{{ asset('/bootstrap.min.css','css') }}" rel="stylesheet" />
        <link href="{{ asset('/bootstrap.css','css') }}" rel="stylesheet" />

        <link rel="stylesheet" type="text/css" href="{{ asset('/sweetalert.css','css') }}"/>

    {% endblock %}

</head>

<body>
    {% block header %}
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Barra de navegaci√≥n</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <img class="navbar-left" id="logo_navbar" src="/assets/img/instagram_black.png">
                    <a class="navbar-brand" href="/">PwGram</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    {% block header_elements %}
                        <ul class="nav navbar-nav">
                            <li >
                                <a id="inicioBtn" href="/" >
                                    Inicio
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right" id="navBar">
                            <li>
                                <a href="" id="login_home">
                                    Login
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right" id="customnavBar">
                            <li class="dropdown" id="userDropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" id="userNameDropdown">
                                    <img id="user_acces_icon" src="/assets/img/user_black.png"></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="edit_profile" id="edit_profile">
                                            Editar perfil
                                        </a>
                                    </li>
                                    <li>
                                        <a href="add_image">
                                            Subir Imagen
                                        </a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a id="logout">
                                            Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                    {% endblock %}
                </div>
            </div>
        </nav>
    {% endblock %}
    </div>
    <div class="container">

        {% block content %}
        {% endblock %}
        <div class="modal fade login" id="loginModal">
            <div class="modal-dialog login animated">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="close_modal">&times;</button>
                        <h4 class="modal-title">Login PwGram</h4>
                    </div>
                    <div class="modal-body">
                        <div class="box">
                            <div class="content">
                                <div class="error"></div>
                                <div class="form loginBox">
                                    <form method="post" accept-charset="UTF-8">
                                        <input id="email" class="form-control" type="text" placeholder="Email or Username" name="email">
                                        <input id="password" class="form-control" type="password" placeholder="Password" name="password">
                                        <input class="btn btn-default btn-login" type="button" value="Login" id="login_submit">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="box">
                            <div class="content registerBox" style="display:none;">
                                <div class="form">
                                    <!--<form method="post" html="{:multipart=>true}" data-remote="true" action="/" accept-charset="UTF-8" enctype="multipart/form-data">-->
                                    <form html="{:multipart=>true}" accept-charset="UTF-8" id="infoRegistro">
                                        <div id="imageSelector" enctype="multipart/form-data" method="post" >
                                            <img id="perfil_reg" name="imageProfile" src="/assets/img/default/default_user.png" class="img-circle img-responsive img-raised">
                                            <!-- <img id="perfil_reg" src="#" class="img-circle img-responsive img-raised">-->
                                            <input type="file" name="image" class="btn btn-group-justified" id="btnSelectImage">
                                        </div>
                                        <input id="username" class="form-control" type="text" placeholder="Username" name="username">
                                        <input id="email_reg" class="form-control" type="text" placeholder="Email" name="email">
                                        <input id="date" class="form-control" type="text" name="date-birth" placeholder="YYYY/MM/DD">
                                        <input id="password_reg" class="form-control" type="password" placeholder="Password" name="password">
                                        <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation">

                                        <input class="btn btn-default btn-register" type="submit" value="Create account" name="commit" id="registerUser"><!--onclick="registerAjax()"-->
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="forgot login-footer">
                            <span>Looking to
                                 <a id="register" href="javascript: showRegisterForm();">create an account</a>
                            ?</span>
                        </div>
                        <div class="forgot register-footer" style="display:none">
                            <span>Already have an account?</span>
                            <a href="javascript: showLoginForm();">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade login" id="edit_modal">
            <div class="modal-dialog login animated">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" id="close_modal">&times;</button>
                        <h4 class="modal-title">Edit profile</h4>
                    </div>
                    <div class="modal-body">
                        <div class="box">
                            <div class="content editBox">
                                <div class="form">
                                    <form html="{:multipart=>true}" accept-charset="UTF-8" id="infoRegistro">
                                        <div id="imageSelector" enctype="multipart/form-data" method="post" >
                                            <img id="perfil_reg" name="imageProfile" src="/assets/img/default/default_user.png" class="img-circle img-responsive img-raised">
                                            <input type="file" name="image" class="btn btn-group-justified" id="btnSelectImage">
                                        </div>
                                        <input id="username" class="form-control" type="text" placeholder="Username" name="username">
                                        <input id="email_reg" class="form-control" type="text" placeholder="Email" name="email">
                                        <input id="date" class="form-control" type="text" name="date-birth" placeholder="YYYY/MM/DD">
                                        <input id="password_reg" class="form-control" type="password" placeholder="Password" name="password">
                                        <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation">

                                        <input class="btn btn-default btn-register" type="submit" value="Create account" name="commit" id="editUser">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <div class="row  navbar-bottom" id="footerA">
            {% block footer %}
                <div class="col-lg-12">
                <div class="copyright pull-right">
                    <!--&copy; 2016, made with <i class="fa fa-heart heart"></i> by Creative Tim-->
                    &copy; Copyright 2017 -- {{ app.name }} made by Gabriel Cammany, Samuel Tavares and Manel Manchon
                </div></div>
            {% endblock %}
            </div>
        </footer>
    </div>
</body>


{% block scripts %}
    <!-- Ajax-->
    <!--   Core JS Files   -->
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->

    <!--  Plugin for the Datepicker, full documentation here: http://www.eyecon.ro/bootstrap-datepicker/ -->

    <!-- Control Center for Material Kit: activating the ripples, parallax effects, scripts from the example pages etc -->
    <!-- Scripts necesarios para hacer el snippet de login y registro-->

    <script src="{{asset('/jquery.min.js','js')}}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{asset('/bootstrap.min.js','js')}}"></script>
    <script src="{{asset('/base.js','js')}}"></script>

    <script src="{{ asset('/login-register.js','js')}}" type="text/javascript"></script>

    <script src="{{ asset('/sweetalert.min.js','js')}}"></script>

    <script src="http://malsup.github.com/jquery.form.js"></script>
{% endblock %}

</html>