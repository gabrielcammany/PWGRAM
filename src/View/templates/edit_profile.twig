{% extends "base_gabri.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block title %}Home{% endblock %}

{% block styles %}
    {{ parent() }}

{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block header_elements %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div class="wrapper">
        <div class="header header-filter" style="background-image: url('/assets/img/examples/city.jpg');"></div>

        <div class="main main-raised">
            <div class="profile-content">
                <div class="container">
                    <div class="row">
                        <div class="error"></div>
                        <div class="col-xs-6 form-group align-center">
                            <div id="imageSelector" enctype="multipart/form-data" method="post" >
                                <img id="perfil_reg"  src="../assets/img/default/default_user.png" class="img-circle img-responsive img-raised">
                                <input type="file" name="image" class="btn btn-group-justified" id="btnSelectImage">
                            </div>
                        </div>
                        <div class="col-xs-6 form-group" id="form_user">
                            <form id="form_user">
                                <input id="username" class="form-control change" type="text" placeholder="Username" name="username">
                                <input id="email_reg" class="form-control change" type="text" placeholder="Email" name="email">
                                <input id="date" class="form-control change" type="text" name="date-birth" placeholder="YYYY/MM/DD">
                                <input id="password_reg" class="form-control change" type="password" placeholder="Password" name="password">
                                <input id="password_confirmation" class="form-control change" type="password" placeholder="Repeat Password" name="password_confirmation">

                                <input id="update_info" class="btn btn-default btn-register" type="button" value="Submit Changes">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('/edit-profile.js','js')}}"></script>
{% endblock %}